<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>RegistrationController</servlet-name>
  	<display-name>RegistrationController</display-name>
  	<description></description>
  	<servlet-class>com.skillogic.employeemanagement.controller.RegistrationController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>RegistrationController</servlet-name>
  	<url-pattern>/register</url-pattern>
  </servlet-mapping>
  <error-page>
    <exception-type>com.skillogic.employeemanagement.exceptions.CustomException</exception-type>
    <location>/exception.jsp</location>
  </error-page>
</web-app>
